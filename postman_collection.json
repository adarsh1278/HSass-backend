{
    "info": {
        "name": "Hospital SaaS API",
        "description": "API collection for Hospital Management SaaS",
        "version": "1.0.0"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api/v1"
        }
    ],
    "item": [
        {
            "name": "SuperAdmin",
            "item": [
                {
                    "name": "SuperAdmin Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"superadmin@hospital.com\",\n  \"password\": \"superadmin123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/superadmin/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "superadmin",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Subscription Plan",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Enterprise Plan\",\n  \"description\": \"Full-featured plan for large hospitals\",\n  \"price\": 199.99,\n  \"currency\": \"USD\",\n  \"billingCycle\": \"monthly\",\n  \"maxUsers\": 100,\n  \"maxPatients\": 50000,\n  \"features\": {\n    \"modules\": [\"OPD\", \"IPD\", \"LAB\", \"PHARMACY\", \"RADIOLOGY\"],\n    \"analytics\": true,\n    \"support\": \"24/7\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/superadmin/subscription-plans",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "superadmin",
                                "subscription-plans"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Subscription Plans",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/superadmin/subscription-plans",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "superadmin",
                                "subscription-plans"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Hospitals",
                    "request": {
                        "method": "GET",
