                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/superadmin/dashboard/stats",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "superadmin",
                                "dashboard",
                                "stats"
                            ]
                        }
                    }
                }
            ]
        },
        {
